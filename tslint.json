{
    "defaultSeverity": "error",
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "src/serviceWorker.ts"
      ]
    },
    "extends": [
        "tslint:recommended",
        "tslint:latest",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-plugin-prettier",
        "tslint-consistent-codestyle"
    ],
    "jsRules": {},
    "rules": {
        "no-sparse-arrays":false,
        "no-object-literal-type-assertion":false,
        "prefer-conditional-expression":false,
        "no-duplicate-variable":false,
        "ban-comma-operator":false,
        "jsdoc-format": [true, "check-multiline-start"],
        "no-implicit-dependencies": false,
        "array-type" :false,
        "arrow-parens": true,
        "arrow-return-shorthand": true,
        "curly": [true, "ignore-same-line"],
        "eofline": true,
        "no-trailing-whitespace": true,
        "member-access": true,
        "no-angle-bracket-type-assertion" :false,
        "no-bitwise": false,
        "no-internal-module": false,
        "no-namespace": [true, "allow-declarations"],
        "jsx-alignment":false,
        "jsx-no-bind":true,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "no-any": false,
        "no-empty": [true,"allow-empty-catch"],
        "object-literal-sort-keys": false,
        "quotemark" : [true, "single", "jsx-double"],
        "interface-over-type-literal" :false,
        "max-line-length": [true, {"limit": 140, "ignore-pattern": "^import |^export {(.*?)}"}], 
        "trailing-comma": [true, {
          "singleline": "never",
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          }
        }],
        "jsx-no-multiline-js": true,
        "member-ordering":false,
        "ordered-imports":false,
        "jsx-boolean-value" :false,
        "jsx-no-lambda":false,
        "jsx-wrap-multiline":true,
        "max-file-line-count" : [true, 400],
        "switch-default": true,
        "jsx-equals-spacing" : ["always"],
        "no-default-export": true,
        "no-var-keyword": true,
        "naming-convention": [
              true,
              {"type": "default", "format": "camelCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid"},
              {"type": "variable", "modifiers": ["global", "const"], "format": ["camelCase","UPPER_CASE"]},
              {"type": "variable", "modifiers": ["export", "const"], "format": "UPPER_CASE"},
              {"type": "functionVariable", "modifiers": ["export", "const"], "format": "PascalCase"},
              {"type": "parameter", "modifiers": "unused", "leadingUnderscore": "allow"},
              {"type": "member", "modifiers": "private", "leadingUnderscore": "require"},
              {"type": "member", "modifiers": "protected", "leadingUnderscore": "forbid"},
              {"type": "property", "modifiers": ["public", "static", "const"], "format": "UPPER_CASE"},
              {"type": "type", "format": "PascalCase"},
              {"type": "class", "modifiers": "abstract", "prefix": "Abstract"},
              {"type": "class", "format": "PascalCase"},
              {"type": "interface", "prefix": "I","require":true}      ]
    },
    "rulesDirectory": []
}